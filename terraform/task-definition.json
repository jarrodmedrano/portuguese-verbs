{
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole",
  "family": "portuguese-verbs",
  "containerDefinitions": [
    {
      "name": "verbecc-service",
      "image": "verbecc:latest",
      "memory": 1024,
      "cpu": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8001
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/portuguese-verbs",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "verbecc-service"
        }
      }
    },
    {
      "name": "api-service",
      "image": "api:latest",
      "memory": 1024,
      "cpu": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 4000,
          "hostPort": 4000
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/portuguese-verbs",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "api-service"
        }
      }
    },
    {
      "name": "client-service",
      "image": "client:latest",
      "memory": 1024,
      "cpu": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/portuguese-verbs",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "client-service"
        }
      }
    },
    {
      "name": "reverse-proxy",
      "image": "nginx:stable",
      "memory": 1024,
      "cpu": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/portuguese-verbs",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "reverse-proxy"
        }
      }
    }
  ],

  "volumes": [
    {
      "name": "api-volume",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-12345678",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "nginx-config",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-12345678",
        "transitEncryption": "ENABLED"
      }
    }
  ],

  "placementConstraints": [],
  "memory": "4096",
  "cpu": "2048",
  "networkMode": "awsvpc",
  "autoScaling": {
    "maxCapacity": 2,
    "minCapacity": 1,
    "cpu": {
      "targetValue": 75
    },
    "memory": {
      "targetValue": 75
    }
  }
}
