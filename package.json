{
  "name": "portuguese-verbs",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "start": "nps",
    "prepare": "npx husky install",
    "preinstall": "npx only-allow pnpm",
    "precommit": "nps precommit",
    "eslint": "eslint \"**/*.+(js|jsx|ts|tsx)\"",
    "eslint:fix": "eslint --fix \"**/*.+(js|jsx|ts|tsx)\"",
    "prettier": "prettier --check \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|css)\"",
    "prettier:fix": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|css)\"",
    "prebuild": "nps prebuild",
    "build": "nps build",
    "postinstall": "manypkg check"
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "prebuild": {
        "dependsOn": [
          "^prebuild"
        ]
      },
      "dev": {
        "dependsOn": [
          "^db:generate"
        ],
        "cache": false
      },
      "build": {
        "outputs": [
          ".next/**",
          "!.next/cache/**"
        ],
        "dependsOn": [
          "^build",
          "^db:generate"
        ]
      },
      "db:generate": {
        "cache": false
      },
      "api#prebuild": {
        "dependsOn": [
          "^build",
          "prebuild"
        ],
        "outputs": [
          "dist/**",
          ".next/**",
          "public/dist/**"
        ]
      },
      "api#build": {
        "dependsOn": [
          "^build",
          "prebuild"
        ],
        "outputs": [
          "dist/**",
          ".next/**",
          "public/dist/**"
        ]
      },
      "client#build": {
        "dependsOn": [
          "api#build",
          "^build",
          "prebuild"
        ],
        "outputs": [
          "dist/**",
          ".next/**",
          "public/dist/**"
        ]
      },
      "test": {},
      "lint": {}
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "./*/**/*.{js,jsx,ts,tsx}": [
      "pnpm run prettier:fix",
      "pnpm run eslint:fix"
    ],
    "*.{json,md}": [
      "pnpm run prettier:fix"
    ]
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.0",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-istanbul": "0.28.3",
    "@vitest/ui": "0.28.4",
    "eslint": "8.21.0",
    "eslint-config-airbnb-typescript": "14.0.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-no-loops": "0.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "8.0.3",
    "jsdom": "20.0.3",
    "lint-staged": "11.1.2",
    "nps": "5.10.0",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "turbo": "^1.10.14",
    "vite-plugin-istanbul": "4.0.0",
    "vitest": "0.26.2"
  }
}
