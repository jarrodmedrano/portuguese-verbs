{
  "name": "turborepo-trpc",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "yarn run format",
    "build": "yarn turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preview": "vite preview",
    "eslint": "eslint \"**/*.+(js|jsx|ts|tsx)\"",
    "eslint:fix": "eslint --fix \"**/*.+(js|jsx|ts|tsx)\"",
    "prettier": "prettier --check \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|css)\"",
    "prettier:fix": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|css)\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "pipeline": {
    "prebuild": {
      "dependsOn": [
        "^prebuild"
      ]
    },
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "api#prebuild": {
      "dependsOn": [
        "^build",
        "prebuild"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "public/dist/**"
      ]
    },
    "api#build": {
      "dependsOn": [
        "^build",
        "prebuild"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "public/dist/**"
      ]
    },
    "client#build": {
      "dependsOn": [
        "api#build",
        "^build",
        "prebuild"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "public/dist/**"
      ]
    },
    "test": {},
    "lint": {}
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-istanbul": "^0.28.3",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "turbo": "1.6.3",
    "vite-plugin-istanbul": "^4.0.0",
    "vitest": "^0.26.2"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "./*/**/*.{js,jsx,ts,tsx}": [
      "yarn run prettier:fix",
      "yarn run eslint:fix"
    ],
    "*.{json,md}": [
      "yarn run prettier:fix"
    ]
  },
  "packageManager": "yarn@1.22.17",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@vitest/ui": "^0.28.4"
  }
}
