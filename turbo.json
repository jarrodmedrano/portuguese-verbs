{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["check:toml", "check:prettier"],
      "outputs": ["dist/**", "build/**"]
    },
    "check:prettier": {
      "outputs": ["dist/**", "build/**"]
    },
    "check:toml": {
      "outputs": ["dist/**", "build/**"]
    },
    "check-types": {
      "dependsOn": ["build:ts", "^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:ts": {
      "outputs": ["packages/**/dist", "apps/**/dist"]
    },
    "build": {
      "outputs": ["dist/**/*", ".next/**/*"],
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
