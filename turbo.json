{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "//#lint": {
      "dependsOn": ["//#check:toml", "//#check:prettier"]
    },
    "//#check:prettier": {},
    "//#check:toml": {},
    "check-types": {
      "dependsOn": ["//#build:ts", "^build"]
    },

    "//#build:ts": {
      "outputs": ["packages/**/dist"]
    },
    "build": {
      "outputs": ["dist/**/*", ".next/**/*"],
      "dependsOn": ["^build"]
    }
  }
}
